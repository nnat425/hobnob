
  <div class="row">
    <div class=" small-12 small-centered medium-11 medium-centered large-6 large-centered columns">
      <div class="signup-panel">
        <div class="row">
          <h2 id="signup_header">HOB NOB Professional Network</h2>
          <p id="signup_advisor">Signup to Create Your Profile</p>
        </div>

          <% if flash[:errors] %>
          <% flash[:errors].each do |msg| %>
          <div class="row">
            <div class="small-12 medium-11 medium-centered large-10 large-centered columns">
              <div data-alert class="alert-box alert radius">
                <%= msg %>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>


        <%= form_for @advisor do |f| %>
        <div class="row">
          <div class="large-10 large-centered small-11 small-centered columns">
            <%= f.text_field :firstname, placeholder: "First Name" %>
            <div class="spacer"></div>
          </div>
        </div>
        <div class="row">
          <div class="large-10 large-centered small-11 small-centered columns">
            <%= f.text_field :lastname, placeholder: "Last Name" %>
            <div class="spacer"></div>
          </div>
        </div>
        <div class="row">
          <div class="large-10 large-centered small-11 small-centered columns">
            <%= f.text_field :email, placeholder: "Email" %>
            <div class="spacer"></div>
          </div>
        </div>
        <div class="row">
          <div class="large-10 large-centered small-11 small-centered columns">
            <%= f.text_field :email_confirmation, placeholder: "Confirm Email" %>
            <div class="spacer"></div>
          </div>
        </div>
        <div class="row">
          <div class="large-10 large-centered small-11 small-centered columns">
            <%= f.password_field :password, placeholder: "Password" %>
            <div class="spacer"></div>
          </div>
        </div>
        <div class="row">
          <div class="large-10 large-centered small-11 small-centered columns">
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
            <div class="spacer"></div>
          </div>
        </div>
        <div class="row">
          <div class="large-10 large-centered small-11 small-centered columns">
            <%= f.submit "Register", :class => "full-button" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

