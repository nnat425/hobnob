
  <div class="small-3 medium-3 large-3 columns" id="page-header">
    <p>Advisors</p>
    <% @categories.each do |category| %>
      <%= link_to category, advisors_path, class: "index-categories-list" %>
    <% end %>
  </div>

  <div class="small-9 medium-9 large-9 columns">
    <% @advisors.each do |advisor| %>
      <div class="row">
        <div class="small-12 medium-12 large-12 columns">
          <div class="panel" id="advisor-index-panel">
            <div class="row">
              <div class="small-3 medium-3 large-3 columns">
                <%= image_tag advisor.avatar.url(:thumb) %>
              </div>
              <div class="small-9 medium-9 large-9 columns">
                <div class-"row" id="index-advisor-info">
                  <div class="small-6 medium-6 large-6 columns">
                    <p id="index-advisor-name"><%= advisor.firstname %></p>
                  </div>
                  <div class="small-6 medium-6 large-6 columns" id="view-advisor-link">
                    <%= link_to "View Advisor", advisor_path(advisor), class: "button" %>
                  </div>
                </div>
                <div class="row">
                  <div class="small-12 medium-12 large-12 columns">
                    <p><%= advisor.current_title %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="small-12 medium-12 large-12 columns">
                    <p><%= advisor.job_description %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="small-12 medium-12 large-12 columns">
                    <% advisor.categories.each do |category| %>
                      <%= link_to category.name, advisors_path, class: "advisor-categories-list" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
