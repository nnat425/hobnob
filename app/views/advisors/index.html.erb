<header class="edit_hero">
  <img src="assets/network_photo.png"/>
</header>

<div class="row" id="advisors-index-container">

  <div class="small-12 medium-12 large-12 columns" id="left-category-bar">
    <%= form_tag(advisors_path, :method => "get", id: "advisors-filter-form") do %>
    <div class="advisors-filter-subheader">
      <p>Finance Category</p><%= link_to "", advisors_path, class: "fa fa-angle-down fa-lg", id: "show-options-categories" %>

    </div>
    <div class="row" id="categories-toggle">
      <div class="index-categories-list" >

        <%= check_box_tag "filter[category][]", "Investment Banking", false, class: "advisors-filter-checkbox" %>
        <label>Investment Banking</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[category][]", "Asset Management", false, class: "advisors-filter-checkbox" %>

        <label>Asset Management</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[category][]", "Corporate Finance Divisions", false, class: "advisors-filter-checkbox" %>
        <label>Corporate Finance Divisions</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[category][]", "Resume & Interview Prep", false, class: "advisors-filter-checkbox" %>
        <label>Resume & Interview Prep</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[category][]", "Other Finance Opportunities", false, class: "advisors-filter-checkbox" %>
        <label>Other Finance Opportunities</label>
      </div>
    </div>

    <div class="advisors-filter-subheader">
      <p>Location</p><%= link_to "", advisors_path, class: "fa fa-angle-down fa-lg", id: "show-options-locations" %>
    </div>
    <div class="row" id="locations-toggle">
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Boston", false, class: "advisors-filter-checkbox" %>
        <label>Boston</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Calgary", false, class: "advisors-filter-checkbox" %>

        <label>Calgary</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Hong Kong", false, class: "advisors-filter-checkbox" %>
        <label>Hong Kong</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Houston", false, class: "advisors-filter-checkbox" %>
        <label>Houston</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "London", false, class: "advisors-filter-checkbox" %>
        <label>London</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Montreal", false, class: "advisors-filter-checkbox" %>
        <label>Montreal</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "NYC", false, class: "advisors-filter-checkbox" %>
        <label>NYC</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "San Francisco", false, class: "advisors-filter-checkbox" %>
        <label>San Francisco</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Shanghai", false, class: "advisors-filter-checkbox" %>
        <label>Shanghai</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Singapore", false, class: "advisors-filter-checkbox" %>
        <label>Singapore</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Toronto", false, class: "advisors-filter-checkbox" %>
        <label>Toronto</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "UAE", false, class: "advisors-filter-checkbox" %>
        <label>UAE</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[location][]", "Vancouver", false, class: "advisors-filter-checkbox" %>
        <label>Vancouver</label>
      </div>
    </div>

    <div class="advisors-filter-subheader">
      <p>Years of Experience</p><%= link_to "", advisors_path, class: "fa fa-angle-down fa-lg", id: "show-options-years" %>
    </div>
    <div class="row" id="experience-toggle">
      <div class="index-categories-list" >

        <%= check_box_tag "filter[years_of_experience][]", "< 5 years", false, class: "advisors-filter-checkbox" %>
        <label>Less than 5 years</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[years_of_experience][]", "5 - 15 years", false, class: "advisors-filter-checkbox" %>
        <label>5 to 15 years</label>
      </div>
      <div class="index-categories-list" >

        <%= check_box_tag "filter[years_of_experience][]", "15 years <", false, class: "advisors-filter-checkbox" %>
        <label>More than 15 years</label>
      </div>
    </div>
    <div class="row">
      <button class="fa fa-search" id="advisor-search-btn" type="submit"> SEARCH</button>
    </div>
    <% end %>
  </div>
</div>
<div class="row" id="advisors-list-holder">
  <div class="small-12 medium-12 large-11 large-centered columns">
    <div class="row" id="advisors-list">
      <%= render partial: "advisors/results_index" %>
    </div>
  </div>
</div>