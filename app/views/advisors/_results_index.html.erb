<% if @advisors == [] %>
  <p>Sorry, there were no advisors that matched your search!</p>
<% else %>
<% @advisors.each do |advisor| %>
<div class="panel" id="advisor-index-panel">
  <div class="row">
    <div class="small-3 medium-3 large-3 columns">
      <div id="advisor-index-avatar">
        <%= image_tag advisor.avatar.url(:medium) %>
      </div>
    </div>
    <div class="small-9 medium-9 large-9 columns">
      <div class-"row" id="index-advisor-info">
        <div class="small-6 medium-6 large-6 columns">
          <p id="index-advisor-name"><%= advisor.firstname %></p>
        </div>
        <div class="small-6 medium-6 large-6 columns" id="advisor-index-price">
        <% if logged_in? %>
          <p class="advisor-price-number">$
          <% if current_user.student == true %>
            <%= advisor.student_price %>
          <% else %>
            <%= advisor.regular_price %></p>
            <p class="advisor-price-session"> per session</p>
          <% end %>
        <% end %>
        </div>
        <div class="small-12 medium-12 large-12 columns">
          <p><%= advisor.current_title %> | <%= advisor.location %></p>
        </div>
        <div class="small-12 medium-12 large-12 columns" id="advisor-categories-list">
        <% advisor.categories.each do |category| %>
          <p><%= category.name %></p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="small-12 medium-12 large-12 columns">
    <%= link_to "Availability", advisor_path(advisor), class: "book-appt-button" %>
  </div>
</div>
<% end %>
<% end %>