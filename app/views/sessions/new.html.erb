<header class="edit_hero">
  <img src="/assets/city_header2-1.jpg"/>
</header>

<div class="row">
  <div class="small-12 medium-8 medium-centered large-6 large-centered columns">
    <div class="login-panel">
      <div class="row">
        <h2 id="login-header"> Login!</h2>
        <%= flash[:login_fail] %>
      </div>
      <%= form_for :session, url: '/login', html: {id: "login"} do |f| %>
      <div class="row">
        <div class="large-10 large-centered small-11 small-centered columns">
          <%= f.label "Email" %>
          <%= f.text_field :email, placeholder: "Email" %>
        </div>
      </div>
      <div class="row">
        <div class="large-10 large-centered small-11 small-centered columns">
          <%= f.label "Password" %><%= link_to " (Forgot Password)", new_password_reset_path, id: "forgot-password-link" %>
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
      </div>
      <div class="row">
        <div class="large-10 large-centered small-11 small-centered columns">
          <%=f.submit "Login", :class => "full-button" %>
        </div>
      </div>
      <% end %>
    </div>

    <div class="enter-email-form-holder">


    </div>

  </div>
</div>
