<div class="row" id="ribbon-header">
</div>

<div class='small-12 medium-10 medium-centered large-6 large-centered columns' id="appointment-form">

  <%= form_for @potential_appointment do |f| %>
  <h2 id='appointment_header'>Edit Connect Date & Time </h2>

  <% if flash[:pick_date_or_enter_title] %>
    <div class="row">
      <div class="small-11 small-centered medium-10 medium-centered large-10 large-centered columns">
        <div data-alert class="alert-box alert radius">
          <%= flash[:pick_date_or_enter_title] %>
        </div>
      </div>
    </div>
  <% end %>


  <div class="row">
    <div class="small-11 small-centered medium-10 medium-centered large-10 large-centered columns">
      <%= f.label :title %>
      <p id="appointment-session">Session: <%= @potential_appointment.title %></p>
      <%= f.text_field :title, placeholder: "Session: #{@potential_appointment.title}" %>
    </div>
  </div>

  <div class="row">
    <div class="small-11 small-centered medium-10 medium-centered large-10 large-centered columns">
      <%= f.label :date %>
      <p id="appointment-session"><%= @potential_appointment.start_time.strftime("%b") %> <%= @potential_appointment.start_time.strftime("%d") %></p>
      <%= date_field(:appointment_date,"date") %>
    </div>
  </div>
  <div class="row">
    <div class="small-11 small-centered medium-10 medium-centered large-10 large-centered columns">
      <%= f.label :Start_Time %>
      <%= time_select 'potential_appointment', 'start_time', {ampm: true, :time_separator => "", minute_step: 15 }, class: "start_time" %>

      <%= f.label :Length %>
      <% if @potential_appointment.advisor.category.name == "Resume & Interview Preparation" %>
      <p class="appt-length">1 Hour</p>
      <% else %>
      <p class="appt-length">30 Minutes</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="small-11 small-centered medium-10 medium-centered large-10 large-centered columns" id="calendar-button-div">
      <%= f.submit "Update", { :class => "full-button", id: "calendar_button" } %>
    </div>
  </div>
  <% end %>
</div>
