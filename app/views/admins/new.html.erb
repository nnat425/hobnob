
<div class="row">
  <div class="large-4 large-centered small-12 small-centered columns">
    <div class="signup-panel">
      <div class="row">
        <h2 id="signup_header"> Login!</h2>
        <p id="signup_advisor">Admin</p>

        <%= flash[:login_fail] %>
      </div>
      <%= form_for :session, url: '/admin_login', html: {id: "login"} do |f| %>
      <div class="row">
        <div class="large-10 large-centered small-11 small-centered columns">
          <%= f.text_field :username, placeholder: "Username" %>
        </div>
      </div>
      <div class="row">
        <div class="large-10 large-centered small-11 small-centered columns">
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
      </div>
      <%=f.submit "Login", :class => "button" %>
      <% end %>
    </div>
  </div>
</div>
</div>
