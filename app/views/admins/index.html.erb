<header class="edit_hero">
  <img src="/assets/city_header8.jpg"/>
  <h1 id='net_mem_header'> Network Members </h1>
</header>
<div id="network-members-container">


  <div class="row">
    <div class="small-12 medium-12 large-12 columns">
      <table class="members-table">
        <thead>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Alternative Email</th>
          <th>Charity</th>
          <th>Location</th>
          <th>Edit</th>
          <th>Delete</th>
        </thead>

        <% @advisors.each do |advisor| %>

        <div class="row">
          <tbody>
            <tr>
              <td><%= advisor.firstname %> </td>
              <td><%= advisor.lastname %></td>
              <td><%= advisor.email %></td>
              <td><%= advisor.alternative_email %></td>
              <td><%= advisor.charity %></td>
              <td><%= advisor.location %></td>
              <td><%= link_to "", edit_advisor_path(advisor), class: "fa fa-edit" %></td>
              <td><%= link_to "", advisor, :data => {:confirm => 'Are you sure you want to remove this advisor from the Network? This cannot be undone.'}, :method => :delete, class: "fa fa-trash" %> </td>
            </tr>
          </tbody>
        </div>
        <% end %>
      </table>
    </div>
  </div>
</div>