<header id="cart_page">
</header>

<div id='cart_header' class='row'>
  <div class='large-5 columns'><h1>Shopping Cart</h1></div>
  <div class='large-4 large-offset-4 columns'><h6>Price</h6></div>
</div>

<% @cart.potential_appointments.each do |appointment|  %>
<div id='item_in_cart' class='row'>
  <div class='large-3 columns'>
    <div id="advisor-index-avatar">
      <%= image_tag Advisor.find_by(id:appointment.advisor_id).avatar.url(:medium) %>
    </div>
    <h3 id='advisor_name_cart'> <%= Advisor.find_by(id:appointment.advisor_id).firstname %> </h3>
  </div>
  <div id='item_info' class='large-7 columns'>
    <h4><%= appointment.title %></h4>
    <%= appointment.start_time.strftime("%A, %B %d, %Y at %l:%M %p") %>
    <%= appointment.end_time.strftime("to %l:%M %p") %>
  </div>
</div>

<% end %>

<%= link_to "Checkout", new_order_path %>