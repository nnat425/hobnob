<header id="cart_page">
</header>

<div class="small-12 small-centered medium-12 medium-centered large-12 large-centered columns" id="shopping-cart-container">
  <div class="row" id="shopping-cart-header">
    <h1>Your Shopping Cart</h1>
  </div>

  <div class="small-12 medium-12 large-12 columns" id="items-holder">
    <% if @cart.potential_appointments.count > 0 %>
    <div class="row" id="items-holder-header">
      <div class="small-6 medium-6 large-6 columns">
        <h4>Appointment</h4>
      </div>
      <div class='small-6 medium-6 large-6 columns'>
        <h4>Price</h4>
      </div>
    </div>
    <% end %>
    <% @cart.potential_appointments.each do |appointment|  %>
    <div id='item_in_cart' class='row'>
      <div class="small-2 medium-2 large-2 columns">
        <div class='row' id="advisor-index-avatar">
          <%= image_tag appointment.advisor.avatar.url(:medium) %>
        </div>
        <h3 id='advisor_name_cart'><%= appointment.advisor.firstname %></h3>
      </div>
      <div id='item_info' class='small-6 medium-6 large-6 columns'>
        <h4 class="app_title"><%= appointment.title %></h4>
        <p><%= appointment.start_time.strftime("%A, %B %d, %Y at %l:%M %p") %><%= appointment.end_time.strftime("to %l:%M %p") %></p>
      </div>
      <div class='small-2 medium-2 large-2 columns'>
        <% if current_user.student == true %>
        <p class='app_price'> <%='$' + appointment.advisor.student_price.to_s %></p>
        <% else %>
        <p class='app_price'> <%='$' + appointment.advisor.regular_price.to_s %>
        <% end %>
      </div>
      <div class="small-2 medium-2 large-2 columns">
        <%= link_to " ", {:controller => 'carts', :action => 'destroy', :potential_appointment => appointment.id}, :method => :delete %><i class="fa fa-trash"></i>
      </div>
    </div>
    <% end %>
  </div>
  <div class ='row'>
    <div id='cart_total' class='large-3 large-offset-6 small-4 small-offset-8 columns'>
      <% if @cart.potential_appointments.count > 0 %>
        <% if current_user.student == true %>
          <%= "Subtotal (" + @cart.potential_appointments.count.to_s + " items): $" + @cart.total_price_student.to_s %>
        <% else %>
          <%= "Subtotal (" + @cart.potential_appointments.count.to_s + " items): $" + @cart.total_price_regular.to_s %>
        <% end %>
        <%= link_to "Checkout", new_order_path %>
      <% else %>
        <h1 id='cart-empty'>Your cart is empty!</h1>
      <% end %>
    </div>
  </div>
</div>