    <div class="row" id="search-advisors-link">
      <%= link_to "Search Advisors", advisors_path, class: "button", id: "search-advisors-link" %>
    </div>
    <div class="small-12 medium-12 large-4 columns" id="home-small-box">
      <div class="home-subheader">
        <h1><i class="fa fa-users fa-lg"></i></h1>
        <h3>Search our Network </h3>
        <p>Start searching our exclusive network for a professional that has the information you are seeking.</p>
        <%= link_to "More", root_path, class: "learn-more", id: "home-search-link" %>
      </div>
    </div>
    <div class="small-12 medium-12 large-4 columns" id="home-small-box">
      <div class="home-subheader">
