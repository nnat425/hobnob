<%= form_for [@advisor , @previous_company], html: { method: "patch", class: "edit_previous_company_form" } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Company Name" %>
  <%= f.label :job_title %>
  <%= f.text_field :job_title, placeholder: "Previous Title" %>
  <%= f.label "Roles/responsibilities" %>
  <%= f.text_area :roles, size: "10x10" %>
  <%= f.submit "Submit Company", :class => "full-button", id: "update-company-btn" %>
<% end %>
