
<% @advisor.previous_companies.each do |company|  %>
<div class="previous_company_holder">

  <div class="row">
    <div class="small-2 medium-2 large-2 columns">
      <label>Name</label>
    </div>
    <div class="small-10 medium-10 large-10 columns">
      <p class="previous_company_info"><%= company.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="small-2 medium-2 large-2 columns">
      <label>Title</label>
    </div>
    <div class="small-10 medium-10 large-10 columns">
      <p class="previous_company_info"><%= company.job_title %></p>
    </div>
  </div>
  <div class="row">
    <div class="small-2 medium-2 large-2 columns">
      <label>Roles</label>
    </div>
    <div class="small-10 medium-10 large-10 columns">
      <p class="previous_company_info"><%= company.roles %></p>
    </div>
  </div>
  <div class="row">
    <div class="small-6 medium-6 large-6 columns">
      <%= link_to "Edit", "#", class: "button" %>
    </div>
    <div class="small-6 medium-6 large-6 columns">
     <%= link_to "Delete", "/previous_companies/#{company.id}", method: :delete, class: "alternative-button", id: "delete-previous-company-btn", data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
<% end %>
